---
import Button from '../ui/Button.astro';
type Props = {
  title: string;
  date: string;
  excerpt: string;
  slug: string;
};

const { title, date, excerpt, slug } = Astro.props;
---

<div class="flex flex-col gap-y-2 rounded-xl transition-all ease-in delay-25 hover:dark:bg-[#0f0f0f] hover:bg-[#fafafa] p-4">
  <div class="w-1/2">
    <p class="text-muted">{date}</p>
    <div class="flex my-2">
      <div class="flex-1 border-t border-default"></div>
      <div class="flex-1 border-t border-muted"></div>
    </div>
  </div>
  <h3 class="text-xl">{title}</h3>
  <p class="text-muted leading-6 line-clamp-3">{excerpt}</p>
  <Button variant="link" href={slug}>Read More</Button>
</div>
