---
import { Bio } from '~/components/widgets/Bio.tsx';
import { AboutTabs } from '~/components/widgets/AboutTabs.tsx';
import { ProfileSidebar } from '~/components/widgets/ProfileSidebar.tsx';
import Hero2 from '~/components/widgets/Hero2.astro';
import Layout from '~/layouts/PageLayout.astro';
import Button from '~/components/ui/Button.astro';

export const prerender = true;

const metadata = {
  title: 'About Jeremiah Chienda — AI Engineer | 10+ Years in Production Software',
  description: 'AI Engineer with 10+ years building production software. Specializing in AI agent systems, RAG, and LLM applications. Master of Engineering, Doshisha University.',
};

---

<Layout metadata={metadata}>
  <Hero2>
    <Fragment slot="title"><span class="underlined">About</span> Me</Fragment>

    <Fragment slot="subtitle">
      AI Engineer building LLM-powered agent systems and RAG pipelines. 10+ years shipping production software across Africa and Europe.
    </Fragment>
    <Fragment slot="content">
      <a href="https://getalinafe.com">&gt;&gt; Also a gospel rapper — Liwu</a>
    </Fragment>
  </Hero2>

  <div class="flex flex-col lg:flex-row relative container my-12 gap-x-4 lg:gap-x-12">
    <div class="w-full lg:w-3/5">
      <AboutTabs client:visible />
      <div class="mt-8">
        <Button href="/contact" variant="primary">Want to work together? Get in Touch</Button>
      </div>
    </div>
    <div class="w-full md:w-2/3 md:mx-auto lg:w-2/5 mt-8 lg:mt-0 min-w-0">
      <ProfileSidebar client:visible />
    </div>
  </div>
</Layout>
