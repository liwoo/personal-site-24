---

<Layout metadata={metadata}>
  <Hero2>
    <Fragment slot="title">My <span class="underlined">Setup</span></Fragment>
    <Fragment slot="subtitle">
      The tools and equipment I use daily for software development, content creation, and streaming. Built for performance, comfort, and productivity.
    </Fragment>
  </Hero2>

  <section class="py-12 sm:py-16 lg:py-20 container relative">
    {equipment.map((category, categoryIndex) => (
      <div class="setup-category mb-16">
        <div class="setup-category-headline mb-8">
          <Headline tagline={category.category} />
        </div>
        {category.items.map((item, itemIndex) => (
          <div class="setup-item grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
            <div class="setup-image">
              <img
                src={item.image}
                alt={item.name}
                class="w-full h-auto rounded-lg shadow-lg object-contain bg-card p-8"
                loading="lazy"
              />
            </div>
            <div class="setup-details flex flex-col justify-center">
              <h3 class="text-2xl md:text-3xl font-bold mb-2">{item.name}</h3>
              <p class="text-lg text-muted mb-4">{item.description}</p>
              <ul class="space-y-2">
                {item.specs.map((spec) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-default">{spec}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    ))}
  </section>
</Layout>

<style>
  .setup-category {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .setup-category.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .setup-category-headline {
    opacity: 0;
    transform: translateY(15px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .setup-category.is-visible .setup-category-headline {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .setup-item {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.7s ease-out, transform 0.7s ease-out;
  }

  .setup-category.is-visible .setup-item {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.2s;
  }

  .setup-image {
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .setup-item.is-visible .setup-image {
    opacity: 1;
    transform: scale(1);
    transition-delay: 0.1s;
  }

  .setup-details {
    opacity: 0;
    transform: translateX(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .setup-item.is-visible .setup-details {
    opacity: 1;
    transform: translateX(0);
    transition-delay: 0.2s;
  }
</style>

<script>
  const initSetupAnimations = () => {
    const observerCallback = (entries: IntersectionObserverEntry[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    };

    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px',
    };

    const observer = new IntersectionObserver(observerCallback, observerOptions);

    // Observe categories
    const categories = document.querySelectorAll('.setup-category');
    categories.forEach((category) => observer.observe(category));

    // Observe individual items
    const items = document.querySelectorAll('.setup-item');
    items.forEach((item) => observer.observe(item));
  };

  // Initial load
  window.addEventListener('load', initSetupAnimations);

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initSetupAnimations);
</script>
