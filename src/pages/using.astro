import Hero2 from '~/components/widgets/Hero2.astro';
import Headline from '~/components/ui/Headline.astro';

export const prerender = true;

const metadata = {
  title: 'My Setup - Using',
  description: "The tools and equipment I use daily for development, content creation, and work.",
};

const equipment = [
