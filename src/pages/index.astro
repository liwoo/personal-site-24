---
import Layout from '~/layouts/PageLayout.astro';

import HomeHero from '~/components/widgets/HomeHero.astro';
import HomeAbout from '~/components/widgets/HomeAbout.astro';
import { footerData } from '~/navigation';

const metadata = {
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <HomeHero socialLinks={footerData.socialLinks} title="Software Engineer" name="Jeremiah Chienda">
    <Fragment slot="description">
      Hi 👋🏽, my name is Jeremiah. I'm <span class="underline">extreeemely</span> good at building Software, speaking at
      events about Blockchain and Software Engineering, plus I make some dope Christian Rap!
    </Fragment>
  </HomeHero>
  <HomeAbout />
</Layout>
