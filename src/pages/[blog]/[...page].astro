    </Fragment>
  </Hero2>
  <div class="container mt-8 items-center flex flex-col md:flex-row-reverse gap-y-8 md:gap-y-0 justify-between relative z-20">
    <div class="">Filters Here</div>
    <div class="w-2/3 md:w-1/2 lg:w-1/4">
      <input
        type="text"
        name="search"
        id="search-blog"
        placeholder="Search from all my articles and blogs"
        class="py-3 px-4 block w-full text-md rounded-lg bg-card"
      />
    </div>
  </div>
  <section class="py-12 sm:py-16 lg:py-20 container-lg relative">
    <div class="flex flex-col gap-y-4 lg:gap-y-8" id="server-posts">
      {posts.map((post) => <BlogListItem post={post} extended />)}
    </div>
    <!-- <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} /> -->
