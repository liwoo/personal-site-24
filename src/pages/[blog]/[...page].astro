const params = Astro.url.searchParams.get('q');

const postsLength = await getPostsLength();

//calculate current page from POSTS_PER_PAGE and postsLength
const currentPage = 1;

// const allCategories = await findCategories();
// const allTags = await findTags();

const metadata = {
  // title: `Blog${currentPage > 1 ? ` â€” Page ${currentPage}` : ''}`,
  title: 'Blog',
  robots: {
    // index: blogListRobots?.index && currentPage === 1,
    follow: blogListRobots?.follow,
  },
  openGraph: {
    type: 'blog',
